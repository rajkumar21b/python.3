def ishappy(n) :
    sum=0
    while n>0 :
        r=n%10 
        sum=sum+r 
        n=n//10
    return sum
n=int(input("ENTER A DIGIT:"))
while n>9 :
    n=ishappy(n)
print("THE GIVE NUMBER IS HAPPY NUMBER") if n==1 or n==7 else print("THE GIVE NUMBER IS NOT HAPPY NUMBER")

OUTPUT :
ENTER A DIGIT:124
THE GIVE NUMBER IS HAPPY NUMBER
